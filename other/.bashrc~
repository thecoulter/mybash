#logpath=V_2/Django/glycam-django/glycamweb/logs
logpath="folder/"

function rmlog {
 
    select opt in git-ignore-me_debug.log git-ignore-me_error.log git-ignore-me_info.log all; do
        if $opt = "all"
           echo "" > $logpath/git-ignore-me_error.log $logpath/git_ignore-me_debug.log 
           echo "" > $logpath/$opt
        
        break
    done
}
