# sshuttle proxy
#e.g. alias 'proxyhome'='proxy uselr hostdomain:22 192.168.1.0/24'
function proxy() {
  screen -dm sshuttle -v -r $1@$2 -x $2 ${@:2}; screen -r;
}

alias proxyhome='proxy andrew 128.192.9.183:22 172.16.0.0/16'
